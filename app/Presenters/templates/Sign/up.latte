{block content}

<div class="card o-hidden border-0 shadow-lg">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-12">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                    </div>
                    
                    <form n:name=signUpForm class="user">
                        <div class="form-group">
                            <input type="text" class="form-control form-control-user" n:name=username placeholder="Username">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control form-control-user" n:name=email placeholder="Email Address">
                        </div>
                        <div class="form-group ">
                            <input type="password" class="form-control form-control-user" n:name=password placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block" n:name=send> 
                            Register Account
                        </button>
                    </form>
                    <hr>
                    <div class="text-center">
                        <a class="small" href="forgot-password.html">Forgot Password?</a>
                    </div>
                    <div class="text-center">
                        <a class="small" n:href="in">Already have an account? Login!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>